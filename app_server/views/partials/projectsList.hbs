<div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        {{#each repos.repo}}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src={{this.owner.avatar_url}} class="bd-placeholder-img card-img-top" width="100%" height="225" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
            <text x="50%" y="50%" fill="#eceeef" dy=".3em">{{this.name}}</text>
            <div class="card-body">
              <p class="card-text">{{this.description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a type="button" href = {{this.html_url}} class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted">{{this.created_at}}</small>
              </div>
            </div>
          </div>
        </div>{{log @this}}
        {{/each}}
      </div>
    </div>
  </div>